@model xtbdEcommerceAdminPanel.Models.Thana
@{
    ViewBag.Title = "Thana Edit";
}
<head>
    <style>
        .error {
            color: red;
        }
    </style>
</head>
<div class="main-content container-fluid">
    <div class="page-title mb-2">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Thana Setup</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Thana</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Edit Thana</li>
                    </ol>
                </nav>
            </div>
        </div>

    </div>
    <!-- Basic Horizontal form layout section start -->
    <section id="basic-horizontal-layouts">
        <div class="row match-height">
            <div class="col-md-1 col-12"></div>
            <div class="col-md-10 col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Edit Thana</h4>
                        <a class="btn btn-primary mr-1 mb-1" style="float: right" href="@Url.Action("Index","Thana")">Back to List</a>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            @using (Html.BeginForm("Edit", "Thana", FormMethod.Post, new { id = "addForm", @class = "form form-horizontal" }))
                            {

                                <div class='@TempData["Class"]' id="flashMessage" role="alert">@TempData["Message"]</div>
                                @Html.HiddenFor(model => model.Id)
                                @Html.HiddenFor(model => model.CreatedBy)
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label>District</label>
                                        </div>
                                        <div class="col-md-8 form-group">
                                            @Html.DropDownListFor(model => model.DistrictId, new SelectList(ViewBag.Districts, "Id", "DistrictName"), "---Select District---", new { @class = "form-control", id = "ddlDistrict" })<i></i>
                                            @Html.ValidationMessageFor(model => model.DistrictId, "", new { @class = "error" })

                                        </div>
                                        <div class="col-md-4">
                                            <label>Thana Name</label>
                                        </div>
                                        <div class="col-md-8 form-group">
                                            @Html.TextBoxFor(model => model.ThanaName, new { id = "Name", placeholder = "Thana name", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.ThanaName, "", new { @class = "error" })
                                        </div>

                                        <div class="col-md-4">
                                            <label>Delivery Charge</label>
                                        </div>
                                        <div class="col-md-8 form-group">
                                            @Html.TextBoxFor(model => model.DeliveryCharge, new { id = "charge", placeholder = "Delivery charge", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.DeliveryCharge, "", new { @class = "error" })
                                        </div>

                                        <div class="col-12 col-md-8 offset-md-4 form-group">
                                            <div class='form-check'>
                                                <div class="checkbox">
                                                    @Html.CheckBoxFor(model => model.IsActive, new { id = "IsActive", @class = "form-check-input" })
                                                    <i></i>Is Active?
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 d-flex justify-content-end">
                                            <button type="submit" class="btn btn-primary mr-1 mb-1">Update</button>
                                            
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-1 col-12"></div>
        </div>
    </section>
    <!-- // Basic Horizontal form layout section end -->
</div>


@section Scripts {
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script>
        $(document).ready(function () {
            $('#flashMessage').delay(3000).fadeOut('slow');
        });       
    </script>

}

