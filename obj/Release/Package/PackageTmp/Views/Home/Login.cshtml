
@{
    ViewBag.Title = "Login";

}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-5 col-sm-12 mx-auto">
            <div class="card pt-4">
                <div class="card-body">
                    <div class="text-center mb-5">
                        <img src="~/Content/images/logo.png" height="48" class='mb-4'>
                        <h3>Sign In</h3>
                        <p>Please sign in to continue</p>
                    </div>
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @enctype = "multipart/form-data", id = "loginForm", @class = "form form-horizontal" }))
                    {
                        if (ViewBag.Message != null)
                        {
                            <p class="text-red"> ViewBag.Message</p>
                        }
                        <div class="form-group position-relative has-icon-left">
                            <label for="username">Username</label>
                            <div class="position-relative">
                                <input type="text" class="form-control" id="email" name="email" required="">
                                @*<div class="form-control-icon">
                                    <i data-feather="user"></i>
                                </div>*@
                            </div>
                        </div>
                        <div class="form-group position-relative has-icon-left">
                            <div class="clearfix">
                                <label for="password">Password</label>

                            </div>
                            <div class="position-relative">
                                <input type="password" class="form-control" id="password" name="password" required="">
                                @*<div class="form-control-icon">
                                    <i data-feather="lock"></i>
                                </div>*@
                            </div>
                        </div>


                        <div class="clearfix text-center">
                            <button class="btn btn-primary">Login</button>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</div>




