@using Vereyon.Web
@using xtbdEcommerceAdminPanel.Utility
@model xtbdEcommerceAdminPanel.Models.RequestDto.UseProcessImageDto
@{
    ViewBag.Title = "Use Process Image";
}
<head>
    <style>
        label.error {
            color: red;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>
<div class="main-content container-fluid">
    <div class="page-title mb-2">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Use Process Image Setup</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Use Process Image</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Create Use Process Image</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section id="basic-horizontal-layouts">
        <div class="row match-height">
            <div class="col-md-1 col-12"></div>
            <div class="col-md-10 col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add Use Process Image</h4>
                        <a class="btn btn-primary mr-1 mb-1" style="float: right" href="@Url.Action("Index","UseProcessImage")">Back to List</a>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            @using (Html.BeginForm("Create", "UseProcessImage", FormMethod.Post, new { id = "useProcessForm", @enctype = "multipart/form-data", @class = "form form-horizontal" }))
                            {
                                <div class="row">
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label>Product</label>
                                            @Html.DropDownListFor(x => x.ProductId, new SelectList(ViewBag.Products, "Id", "Name"), "----Select Product----", new { @class = "form-control", @style = "width:100%" })
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label>Product Unit</label>
                                            @Html.DropDownListFor(model => model.ProductUnitId, Enumerable.Empty<SelectListItem>(), "---- Select Product Unit ----", new { @class = "form-control", @style = "width:100%" })
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label>Use Process Image 1</label>
                                            <input class="form-control" name="ProductImagesForm[0].ImageLocation" id="ProductImages[0].ImageLocation" type="file" onchange="readFirstImage(this);">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label>Use Process Image 2</label>
                                            <input class="form-control" name="ProductImagesForm[0].ImageLocation" id="ProductImages[0].ImageLocation" type="file" onchange="readSecondImage(this);">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label>Use Process Image 3</label>
                                            <input class="form-control" name="ProductImagesForm[0].ImageLocation" id="ProductImages[0].ImageLocation" type="file" onchange="readThirdImage(this);">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label>Use Process Image 4</label>
                                            <input class="form-control" name="ProductImagesForm[0].ImageLocation" id="ProductImages[0].ImageLocation" type="file" onchange="readFourthImage(this);">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label>Use Process Image 5</label>
                                            <input class="form-control" name="ProductImagesForm[0].ImageLocation" id="ProductImages[0].ImageLocation" type="file" onchange="readFifthImage(this);">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label>Use Process Image 6</label>
                                            <input class="form-control" name="ProductImagesForm[0].ImageLocation" id="ProductImages[0].ImageLocation" type="file" onchange="readSixthImage(this);">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label>Use Process Image 7</label>
                                            <input class="form-control" name="ProductImagesForm[0].ImageLocation" id="ProductImages[0].ImageLocation" type="file" onchange="readSeventhImage(this);">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label>Use Process Image 8</label>
                                            <input class="form-control" name="ProductImagesForm[0].ImageLocation" id="ProductImages[0].ImageLocation" type="file" onchange="readLastImage(this);">
                                        </div>
                                    </div>



                                    <div class="col-12 d-flex justify-content-end" style="margin-bottom: 5px;">
                                        <button type="submit" id="AddButton" class="btn btn-primary">Add</button>
                                    </div>
                                </div>


                                <div class="col-md-12 col-12">
                                    <div class="column" style="float: left;margin-bottom: 15px;">
                                        <img id="fImg"  src="#" alt="Product image" style="width:12%">
                                        <img id="SImg"  src="#" alt="Product image" style="width:12%">
                                        <img id="TImg"  src="#" alt="Product image" style="width:12%">
                                        <img id="FoImg" src="#" alt="Product image" style="width:12%">
                                        <img id="FiImg" src="#" alt="Product image" style="width:12%">
                                        <img id="SiImg" src="#" alt="Product image" style="width:12%">
                                        <img id="SeImg" src="#" alt="Product image" style="width:12%">
                                        <img id="EiImg" src="#" alt="Product image" style="width:12%">
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script type="text/javascript">
        $(document).ready(

            function () {
                var configParamsObj = {
                    placeholder: '----Select Product----',
                    minimumResultsForSearch: 3
                };
                $("#ProductId").select2(configParamsObj);

                $("#ProductId").change(function () {

                    var productId = $("#ProductId").val();
                    var product = { id: productId };
                    $("#ProductUnitId").empty();
                    $("#ProductUnitId").append('<option value="" selected>---- Select Product Unit ----</option>');

                    $.ajax({
                        url: '@Url.Action("GetProductUnitsByProduct", "DropDown")',
                        type: "GET",
                        dataType: 'JSON',
                        contentType: "application/json; charset=utf-8",
                        data: product,
                        success: function (data) {
                            $.each(data,
                                function (index, value) {
                                    $("#ProductUnitId").append('<option value="' +
                                        value.Id +
                                        '">' +
                                        value.StockKeepingUnit +
                                        '</option>');
                                });
                        },
                        error: function () {
                            alert("Something went wrong");
                        }

                    });
                });
            });

        $('#fImg').hide();
        $('#SImg').hide();
        $('#TImg').hide();
        $('#FoImg').hide();
        $('#FiImg').hide();
        $('#SiImg').hide();
        $('#SeImg').hide();
        $('#EiImg').hide();

        function readFirstImage(input) {
            if (input.files && input.files[0]) {
                $('#fImg').show();
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#fImg').attr('src', e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function readSecondImage(input) {
            if (input.files && input.files[0]) {
                $('#SImg').show();
