@using Vereyon.Web
@using xtbdEcommerceAdminPanel.Models
@{
    ViewBag.Title = "Coupon Index";
    var couponList = ViewBag.CouponList;
}

<link rel="stylesheet" href="~/Content/vendors/simple-datatables/style.css">
<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">


            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Coupon List</h3>

            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Coupon</a></li>
                        <li class="breadcrumb-item active" aria-current="page">List</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">

                <a href="@Url.Action("Create","Coupon")" class="btn btn-success mr-1 mb-1" style="float: right"><i data-feather="plus"></i>Add Coupon</a>
            </div>
            <div class="card-body">
                @Html.RenderFlashMessages()
                <table class='table table-striped' id="table1">
                    <thead>
                        <tr>
                            <th>SL</th>
                            <th>Code</th>
                            <th>Discount</th>
                            <th>Validity</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (couponList != null)
                        {
                            var count = 1;
                            foreach (Coupon coupon in couponList)
                            {
                                <tr style="width: 100%">
                                    <td style="width: 3%">@(count++)</td>

                                    <td style="width: 10%">
                                        @coupon.Code
                                    </td>


                                    <td style="width: 10%">
                                        @coupon.DiscountPercentage
                                    </td>
                                    <td style="width: 10%">
                                        @coupon.Validity
                                    </td>
                                  

                                    <td style="width: 10%">
                                        @{

                                            var activeStatus = coupon.IsActive ? "Active" : "InActive";
                                            var statusClass = coupon.IsActive ? "bg-success" : "bg-danger";
                                            <span class="badge @statusClass">@activeStatus</span>
                                        }

                                    </td>
                                    <td style="width: 20%">
                                        <a class="btn btn-primary" href="@Url.Action("Edit", "Coupon", new {id = @coupon.Id})">Edit</a>
                                    </td>
                                </tr>
                                                }
                                            }
                    </tbody>
                </table>
            </div>
        </div>

    </section>

</div>
@section scripts
{
    <script src="~/Content/vendors/simple-datatables/simple-datatables.js"></script>
    <script src="~/Content/js/vendors.js"></script>

}