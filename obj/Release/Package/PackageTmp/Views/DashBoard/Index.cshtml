@using xtbdEcommerceAdminPanel.Models.View_Model

@{
    ViewBag.Title = "Product Dashboard";

    Count count = ViewBag.Count;
}
<style>
    .wrimagecard{	
    margin-top: 0;
    margin: 1rem 1.5rem;
    padding: 5px;
    text-align: left;
    position: relative;
    background: #fff;
    box-shadow: 4px 10px 10px 0px rgba(46,61,73,0.15);
    border-radius: 4px;
    transition: all 0.3s ease;
    font-style: normal;
    font-family:sans-serif
}
.wrimagecard .fa{
    position: relative;
    font-size: 70px;
    font-style: normal;
    font-family:sans-serif
}
.wrimagecard-topimage_header{
    padding: 20px;
    font-style: normal;
    font-family:sans-serif
}
a.wrimagecard:hover, .wrimagecard-topimage:hover {
    box-shadow: 2px 4px 8px 0px rgba(46,61,73,0.2);
}
.wrimagecard-topimage a {
    width: 100%;
    height: 100%;
    display: block;
    font-style: normal;
    font-family:sans-serif
}
.wrimagecard-topimage_title {
    padding: 10px;
    height: 40px;
    padding-bottom: 0.75rem;
    position: relative;
    font-style: normal;
    font-family:sans-serif
}
.wrimagecard-topimage a {
    border-bottom: none;
    text-decoration: none;
    color: #525c65;
    transition: color 0.3s ease;
    font-style: normal;
    font-family:sans-serif
}
</style>
<div class="main-content container-fluid">
    <div class="page-title">
        <h3>Product Dashboard</h3>
        @*<p class="text-subtitle text-muted">A good dashboard to display your statistics</p>*@
    </div>
    <section class="section">
        <div class="row mb-2">
            <div class="col-12 col-md-4">
                <div class="card card-statistic">
                    <div class="card-body p-0">
                        <div class="d-flex flex-column">
                            <div class='px-3 py-3 d-flex justify-content-between'>
                                <h3 class='card-title'>Total Products</h3>
                                <div class="card-right d-flex align-items-center">
                                    <p>@count.Poducts </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body p-0">
                        <div class="d-flex flex-column">
                            <div class='px-3 py-3'>
                                <div class="card-right text-white">
                                    <canvas id="myChart"></canvas>
                                </div>
                            </div>
                            <div class='px-3 py-3'>
                                <div class="card-right">
                                    <span>Total Active Products - @count.ActivePoducts</span><br/><br/>
                                    <span>Total Inactive Products - @count.InactivePoducts</span>
                                    <input type="hidden" id="totalActiveProduct" value="@count.ActivePoducts"/>
                                    <input type="hidden" id="totalInactiveProduct" value="@count.InactivePoducts"/>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card card-statistic">
                    <div class="card-body p-0">
                        <div class="d-flex flex-column">
                            <div class='px-3 py-3 d-flex justify-content-between'>
                                <h3 class='card-title'>Total Brand</h3>
                                <div class="card-right d-flex align-items-center">
                                    <p>@count.ActiveBrands </p>
                                </div>
                            </div>
                            @*<div class="chart-wrapper">
                                <canvas id="canvas2" style="height:100px !important"></canvas>
                            </div>*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card card-statistic">
                    <div class="card-body p-0">
                        <div class="d-flex flex-column">
                            <div class='px-3 py-3 d-flex justify-content-between'>
                                <h3 class='card-title'>Total Categories</h3>
                                <div class="card-right d-flex align-items-center">
                                    <p>@count.ActiveCategories </p>
                                </div>
                            </div>
                            @*<div class="chart-wrapper">
                                <canvas id="canvas3" style="height:100px !important"></canvas>
                            </div>*@
                        </div>
                    </div>
                </div>
            </div>
       
        </div>
       
    </section>
</div>
